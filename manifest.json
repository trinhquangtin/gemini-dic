{
  "manifest_version": 3,
  "name": "gemini-dict",
  "version": "1.0",
  "description": "Explains a Japanese word using Gemini.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}